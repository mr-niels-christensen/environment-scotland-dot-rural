SHELL := /bin/bash

MAJORMINOR := 1.0

# win addition
FIND_EXE := C:\Users\s02vb4\find.exe
PIP_EXE := C:\Python27\Scripts\pip.exe
# PYTHONW_EXE := C:\Python27\pythonw.exe

#PYTHON_FILES := $(shell find src -name "*.py")
PYTHON_FILES := $(shell $(FIND_EXE src -name "*.py"))
#FRONTEND_FILES := $(shell find src/main/frontend -name "*.*")
FRONTEND_FILES := $(shell $(FIND_EXE src/main/frontend -name "*.*"))
VERSION := $(MAJORMINOR)
NAME := $(shell grep name src/main/python/setup.py | cut -d "'" -f 2)
DISTFILE := build/$(NAME)-$(VERSION).zip
#GAEDIR := build/environment-scotland-$(MAJORMINOR)
GAEDIR := build\environment-scotland-$(MAJORMINOR)

all: ide runlocal

# source .venv.for.ide/bin/activate && dev_appserver.py $(GAEDIR) --log_level debug
.PHONY: runlocal
runlocal: .gaebuild.made .pip.for.ide.made
	.venv.for.ide\Scripts\activate.bat && dev_appserver.py $(GAEDIR) --log_level debug

# source .venv.for.ide/bin/activate && dev_appserver.py $(GAEDIR) --log_level debug --clear_datastore true --clear_search_indexes
.PHONY: runclean
runclean: .gaebuild.made .pip.for.ide.made test
	.venv.for.ide\Scripts\activate.bat && dev_appserver.py $(GAEDIR) --log_level debug --clear_datastore true --clear_search_indexes

.PHONY: gaebuild
gaebuild: .gaebuild.made

.gaebuild.made: .gaebuild.yamls.made .gaebuild.python.made .gaebuild.pip.made .gaebuild.frontend.made
	touch .gaebuild.made

#pip install -t $(GAEDIR) rdflib-appengine
.gaebuild.pip.made: .gaedir.made
	$(PIP_EXE) install -t $(GAEDIR) rdflib-appengine
	touch .gaebuild.pip.made

.gaebuild.python.made: $(PYTHON_FILES) .gaedir.made
	cp -r src/main/python/* $(GAEDIR)/
	touch .gaebuild.python.made

.gaebuild.frontend.made: $(FRONTEND_FILES) .gaedir.made
	cp -r src/main/frontend $(GAEDIR)/
	touch .gaebuild.frontend.made

.gaebuild.yamls.made: src/main/app.yaml src/main/cron.yaml src/main/appengine_config.py .gaedir.made
	cp src/main/*.yaml $(GAEDIR)/
	cp src/main/appengine_config.py $(GAEDIR)/
	touch .gaebuild.yamls.made

.gaedir.made:
	mkdir $(GAEDIR)
	touch .gaedir.made

.PHONY: test
test: .python.test.made

.python.test.made: .pip.for.use.made
	.venv.for.use\Scripts\activate.bat && python -m unittest discover -s src/test/python/dot/
	touch .python.test.made

.pip.for.use.made: $(DISTFILE) .venv.for.use\Scripts\activate.bat
	.venv.for.use\Scripts\activate.bat && pip install $(DISTFILE) && pip install --force-reinstall --no-deps --upgrade $(DISTFILE)
	touch .pip.for.use.made

.PHONY: deploy
deploy: gaebuild
	@head -2 $(GAEDIR)/app.yaml
	@read -p "Press RETURN to deploy the above, CTRL+C to cancel"
	appcfg.py update $(GAEDIR)

.PHONY: build
build: $(DISTFILE)

$(DISTFILE): $(PYTHON_FILES)
	echo VERSION = $(VERSION) > src/main/python/dotruralsepake/__init__.py
	(cd src/main/python && setup.py sdist --dist-dir ../../../build/)

.venv.for.use\Scripts\activate.bat:
	virtualenv .venv.for.use

.PHONY: ide
ide: .pip.for.ide.made

.pip.for.ide.made: .venv.for.ide\Scripts\activate.bat src/main/python/requirements.txt $(PYTHON_FILES)
	.venv.for.ide\Scripts\activate.bat && (cd src/main/python && pip install -r requirements.txt)
	touch .pip.for.ide.made

.venv.for.ide\Scripts\activate.bat:
	virtualenv .venv.for.ide

.PHONY: clean
clean: distclean
	rm -rf .venv* || true
	rm -rf build || true    
	mkdir build

# 'touch .foo.made' is a workaround to make the pattern matching for the following rm command work on windows : https://urchin.earth.li/~twic/Unix_on_Windows.html
.PHONY: distclean
distclean:
	rm .*.made || true
	rm $(DISTFILE) || true

